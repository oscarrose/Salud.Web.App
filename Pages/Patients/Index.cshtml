@page
@model Salud.Web.App.Pages.Patients.IndexModel

<p>
    <a class="btn btn-outline-primary btn-lg" asp-page="Create">Create New</a>
</p>

<div class="table-responsive">

    <table class="table-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].DateBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].NumberPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].HealthInsurance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].Disease)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient[0].AllergicMedicine)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Patient)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HealthInsurance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Disease)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllergicMedicine)
                    </td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PatientId">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.PatientId">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.PatientId">Delete</a> 
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>